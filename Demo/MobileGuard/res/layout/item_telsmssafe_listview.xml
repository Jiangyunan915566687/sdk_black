<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         android:clickable="true"
        android:layout_width="fill_parent"
        android:background="@drawable/bt_selector"
        android:layout_height="65dip" >

        <TextView
            android:layout_margin="5dip"
            android:id="@+id/tv_telsmssafe_listview_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="110" />

        <TextView
            android:textSize="18sp"
            android:layout_margin="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginBottom="5dip"
            android:layout_below="@id/tv_telsmssafe_listview_item_number"
            android:id="@+id/tv_telsmssafe_listview_item_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拦截模式" />

        <ImageView
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_telsmssafe_listview_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_delete_selector" />
        <View
          
            android:layout_below="@id/tv_settingcenter_autoupdate_content"
             android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="@drawable/list_devider"/>
    </RelativeLayout>
