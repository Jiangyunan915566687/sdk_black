<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima62.mobileguard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/tv_title"
        android:text="设置中心" />

    <com.itheima62.mobileguard.view.SettingCenterItemView
        android:id="@+id/sciv_setting_center_autoupdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        itheima:content="自动更新已经关闭-自动更新已经打开"
        itheima:title="自动更新设置" >
    </com.itheima62.mobileguard.view.SettingCenterItemView>

    <com.itheima62.mobileguard.view.SettingCenterItemView
        android:id="@+id/sciv_setting_center_blackservice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        itheima:content="黑名单拦截设置已经关闭-黑名单拦截设置已经打开"
        itheima:title="黑名单拦截设置" >
    </com.itheima62.mobileguard.view.SettingCenterItemView>
     <com.itheima62.mobileguard.view.SettingCenterItemView
        android:id="@+id/sciv_setting_center_watchdogservice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        itheima:content="看门狗服务设置已经关闭-看门狗服务设置已经打开"
        itheima:title="看门狗服务设置" >
    </com.itheima62.mobileguard.view.SettingCenterItemView>

    <com.itheima62.mobileguard.view.SettingCenterItemView
        android:id="@+id/sciv_setting_center_phonelocationservice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        itheima:content="来电归属地设置已经关闭-来电归属地设置已经打开"
        itheima:title="来电归属地设置" >
    </com.itheima62.mobileguard.view.SettingCenterItemView>

    <RelativeLayout
        android:id="@+id/rl_settingcenter_locationsytle_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_selector"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_settingcenter_locationsytle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="归属地显示风格"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_settingcenter_locationsytle_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_settingcenter_locationsytle_title"
            android:layout_margin="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:text="卫士蓝"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_settingcenter_locationsytle_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/iv_jiantou_selector" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:layout_below="@id/tv_settingcenter_locationsytle_content"
            android:background="@drawable/list_devider" />
    </RelativeLayout>

</LinearLayout>