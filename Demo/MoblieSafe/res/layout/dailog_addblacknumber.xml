<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866DD00"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加黑名单号码"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_telsms_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入号码"
            android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:inputType="phone" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp" >
        <CheckBox 
            android:id="@+id/cb_dailogtelsms_smsmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信拦截"
            android:textColor="@color/black"/>
        <CheckBox 
            android:id="@+id/cb_dailogtelsms_telmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="电话拦截"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_dailogtelsms_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bt_dailogtelsms_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>