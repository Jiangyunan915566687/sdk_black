<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/iv_appmanager_item_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher"/>
    <TextView 
        android:layout_margin="5dp"
        android:id="@+id/tv_appmanager_item_title"
        android:layout_toRightOf="@id/iv_appmanager_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算器"
        android:textColor="@color/black"
        />
    <TextView 
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tv_appmanager_item_title"
        android:layout_alignLeft="@id/tv_appmanager_item_title"
        android:id="@+id/tv_appmanager_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="位置"        
        android:textColor="@color/black"
        />
    <TextView 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_appmanager_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小"
        android:textColor="@color/black"
        />
    

</RelativeLayout>
