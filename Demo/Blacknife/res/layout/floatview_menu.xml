<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floatview_menu_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/floatview_iv_menu_user"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/floatview_menu_user"
        android:focusable="false"
        android:gravity="center"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/floatview_iv_menu_gift"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/floatview_menu_gift"
        android:focusable="false"
        android:gravity="center"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:id="@+id/floatview_rl_menu_msgs"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/floatview_iv_menu_msgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/floatview_menu_msg"
            android:focusable="false"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/floatview_menu__msgs_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/floatview_iv_menu_msgs"
            android:background="@drawable/floatview_menu_msgs_count"
            android:gravity="center"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="15.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/floatview_iv_menu_questions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/floatview_menu_question"
        android:focusable="false"
        android:gravity="center"
        android:scaleType="centerInside" />

</LinearLayout>