<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="@dimen/wepay_title_high"
	android:background="@drawable/wepay_kuang_title_bar_bg"
	android:focusable="false"
	android:clickable="false"
	android:focusableInTouchMode="false"
	android:gravity="center_vertical">
	
      <ImageView
            android:id="@+id/img_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/wepay_space_middle"
            android:src="@drawable/wepay_btn_close" />

	<TextView
		android:id="@+id/txt_bar_title"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:textColor="@color/wepay_txt_title"
		android:textSize="@dimen/wepay_txt_xlarge" />

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/wepay_space_small"
		android:focusable="false"
		android:clickable="false"
		android:focusableInTouchMode="false"
		android:layout_centerVertical="true">

		<TextView
			android:id="@+id/txt_bar_operate"
			android:layout_width="@dimen/wepay_operate_button_width"
			android:layout_height="@dimen/wepay_operate_button_height"
			android:layout_gravity="center"
			android:gravity="center"
			android:paddingLeft="@dimen/wepay_space_middle"
			android:paddingRight="@dimen/wepay_space_large"
			android:textColor="@color/wepay_first_btn_txt"
			android:textSize="@dimen/wepay_txt_middle"
			android:background="@drawable/wepay_first_btn_bg"
			android:visibility="invisible"/>

		<ProgressBar
			android:id="@+id/progress_bar_wait"
			style="?android:attr/progressBarStyleSmall"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginRight="@dimen/wepay_space_large"
			android:layout_marginLeft="@dimen/wepay_space_large"
			android:visibility="invisible" />
	</FrameLayout>

</RelativeLayout>