<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_frame_nor"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/dlg_edit_account_pwd"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/dlg_input"
        android:layout_weight="1.0"
        android:background="@null"
        android:drawableLeft="@drawable/lion_icon_pwd_gray"
        android:drawablePadding="7.5dip"
        android:hint="@string/hint_pwd"
        android:inputType="textPassword"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:textColor="@color/common_black"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@+id/dlg_input_scan_pwd"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:scaleType="center"
        android:src="@drawable/common_scan_selecotr" />

</LinearLayout>