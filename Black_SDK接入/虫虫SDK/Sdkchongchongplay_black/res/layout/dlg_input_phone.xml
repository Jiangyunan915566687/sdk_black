<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlg_ll_input_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_frame_nor"
    android:orientation="horizontal"
    android:layout_marginBottom="15.0dip" >

    <EditText
        android:id="@+id/dlg_input_phone"
        android:layout_width="0.0dip"
        android:layout_height="@dimen/dlg_input"
        android:layout_weight="1.0"
        android:background="@null"
        android:drawableLeft="@drawable/lion_icon_phone_gray"
        android:drawablePadding="7.5dip"
        android:hint="@string/hint_phone"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:textColor="@color/common_black"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@+id/dlg_iv_clear_phone"
        android:layout_width="@dimen/dlg_input"
        android:layout_height="@dimen/dlg_input"
        android:scaleType="center"
        android:src="@drawable/lion_icon_del"
        android:visibility="invisible" />

</LinearLayout>