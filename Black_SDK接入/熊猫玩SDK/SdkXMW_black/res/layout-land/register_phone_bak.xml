<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_phone"
    android:layout_width="320dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:background="@color/con_backd"
    android:orientation="vertical"
    android:visibility="gone" >

    <!-- 标题 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@color/con_back"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            style="@style/xmw_title2"
            android:text="@string/xmw_regisitytip" />

        <LinearLayout
            android:id="@+id/rephone_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="vertical"
                android:src="@drawable/xmw_back" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 标题 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/con_rudeback" >
    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/con_line" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 手机号码 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="0dp"
            android:background="@color/appWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/xmw_phone"
                android:gravity="center" />

            <com.xmwsdk.view.XmwEditText
                android:id="@+id/rephone_number"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@color/luc_back"
                android:hint="@string/xmw_phonenumber"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="3dp"
                android:textColorHint="@color/con_black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rephone_send"
                android:layout_width="75dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/xmw_butbg"
                android:text="@string/xmw_sendverify"
                android:textSize="12sp" />
        </LinearLayout>
        <!-- 手机号码 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/con_line" >
        </View>
        <!-- 短信验证码 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@color/appWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/xmw_code"
                android:gravity="center" />

            <com.xmwsdk.view.XmwEditText
                android:id="@+id/rephone_code"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginRight="5dp"
                android:background="@color/luc_back"
                android:hint="@string/xmw_phonecode"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="3dp"
                android:textColorHint="@color/con_black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 短信验证码 -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/con_line" >
        </View>

        <Button
            android:id="@+id/rephone_btn"
            style="@style/but_noamol"
            android:text="@string/xmw_regisit" />

        <TextView
            android:id="@+id/rephone_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/appBlack"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>