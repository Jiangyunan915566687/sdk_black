<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/account_bg_color"
    android:fillViewport="true" >

<LinearLayout 
    android:layout_width="fill_parent"
    android:gravity="center"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

     <TextView
        android:textColor="@color/black" 
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="		温馨提示:一键注册的账号的原始密码为账号的后7位数字"/>
    
	<RelativeLayout 
	    android:id="@+id/llInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:orientation="vertical" >
 		<FrameLayout 
 		    android:id="@+id/fl"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true" 
	         android:layout_marginTop="20dip"
	        android:gravity="center_vertical"> 
	        <EditText  
		        android:id="@+id/et_account" 
		        style="@style/text_change_pwd_right"
		        android:background="@drawable/bk"
		        android:hint="@string/change_account_hint"/>
	        <ImageView 
	            android:id="@+id/iv_del"
	            android:src="@drawable/del"
	            android:visibility="gone"
	            android:layout_width="wrap_content"
	            android:layout_gravity="center_vertical|right"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:scaleType="fitXY"/>
	        </FrameLayout>
	 	<TextView 
		  	android:layout_toLeftOf="@id/fl"
	        style="@style/text_change_pwd_left"
	         android:layout_marginTop="20dip"
	        android:text="账号   :"
	        android:hint="@string/change_account_hint"/> 
          
        <EditText 
            android:id="@+id/et_oldPwd" 
             android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fl"
            android:inputType="textPassword"
            style="@style/text_change_pwd_right"
            android:background="@drawable/bk"
            android:hint="请输入旧密码"/>
		 
 	    <TextView 
 	        android:layout_toLeftOf="@id/et_oldPwd"
           	style="@style/text_change_pwd_left"
           	android:layout_alignTop="@id/et_oldPwd"
            android:text="旧密码   :"/>
		 
       	<EditText 
            android:id="@+id/et_newPwd" 
             android:layout_marginTop="10dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/et_oldPwd"
            android:inputType="textPassword"
            style="@style/text_change_pwd_right"
            android:background="@drawable/bk"
            android:hint="请输入新密码"/>
        <TextView
 	        android:layout_toLeftOf="@id/et_newPwd"
         	android:layout_alignTop="@id/et_newPwd" 
           	style="@style/text_change_pwd_left"
            android:text="新密码   :"/>
	    	        
        <Button 
		    android:id="@+id/btn_submit"
	        android:layout_below="@id/et_newPwd"
		    android:layout_centerHorizontal="true"
		    android:layout_gravity="center_horizontal"
		    android:layout_width="192dip"
		    android:layout_height="35dip"
		    android:text="@string/confirm_submit"
		    android:layout_marginTop="20dip"
		    android:textColor="@color/white"
		    android:background="@drawable/btn_submit_selector"/>

	    
