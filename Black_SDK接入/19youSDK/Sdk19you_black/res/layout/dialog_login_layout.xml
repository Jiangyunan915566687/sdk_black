<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent">
	<FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:clickable="true"
	    android:orientation="vertical"
	     >
	
	    <LinearLayout
	        android:layout_width="320dip"
	        android:layout_height="232dip"
	        android:layout_gravity="center"
	        android:background="@drawable/bg_login"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="40.0dip"
	            android:layout_gravity="bottom"
	            android:gravity="center"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:orientation="horizontal" >
	            <TextView
	            android:id="@+id/title"
	            style="@style/text_18_ffffff"
	            android:layout_width="wrap_content"
	            android:layout_height="40.0dip"
	            android:gravity="center"
	            android:textColor="@color/black"
	            android:text="19游戏账号登录"
	            android:visibility="visible" />
	        </LinearLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:background="@drawable/divider_01"/>
	
	        <LinearLayout
	            android:id="@+id/content"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="12dip"
	            android:layout_marginRight="12dip"
	            android:layout_marginTop="10dip"
	            android:gravity="center" >
	
	            
	            <FrameLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
				       	<EditText 
			                android:id="@+id/et_account" 
			                android:inputType="textEmailAddress"
			                style="@style/text_change_pwd_right"
			                android:layout_height="40dip"
			                android:layout_width="match_parent"
			                android:background="@drawable/et_top"
			                android:hint="@string/change_account_hint"/>
				       	<LinearLayout 
				            android:layout_width="wrap_content"
				            android:id="@+id/iv_choice"
				            android:gravity="center"
				            android:paddingLeft="10dip"
				             android:layout_gravity="center_vertical|right"
			                android:paddingRight="10dip"
				            android:layout_height="40dip">
					        <ImageView 
					            android:id="@+id/iv_del1"
					            android:src="@drawable/choice_money"
					            android:layout_width="wrap_content"
					           
					            android:layout_height="wrap_content"
					            android:layout_marginRight="10dip"
					            android:scaleType="fitXY"/>
					    </LinearLayout>
		    	</FrameLayout>
	            <View 
	                android:layout_width="match_parent"
		            android:layout_height="1dip"
		            android:background="@drawable/divider_01"/>
	             <FrameLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" 
			        android:gravity="center_vertical">
				       	<EditText 
			                android:id="@+id/et_pwd" 
			                android:inputType="textPassword"
			                style="@style/text_change_pwd_right"
			                android:layout_height="40dip"
			                android:layout_width="match_parent"
			                android:background="@drawable/et_bottom"
			                android:hint="@string/login_pwd"/>
		    	</FrameLayout>
	        </LinearLayout>
	
	      
	        <Button 
	            android:id="@+id/btn_login"
	            android:layout_width="match_parent"
	            android:layout_height="38.0dip"
	            android:textColor="@color/white"
	            android:text="进入游戏"
	            android:textSize="14dip"
	            android:layout_marginLeft="12dip"
	            android:layout_marginRight="12dip"
	            android:layout_marginTop="18.0dip"
	            android:background="@drawable/btn_ok_selector"/>
	
	        
	        <LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="match_parent"
	          android:gravity="center"
	          android:layout_gravity="center_vertical"
	          android:layout_marginLeft="12dip"
              android:layout_marginRight="12dip"
              android:layout_marginTop="10.0dip"
	          android:orientation="horizontal" >
	            <TextView 
	                android:text="一键注册"
	                android:id="@+id/tx_reg"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_18_back"
	               	android:textColor="@color/black"
	                />
	            <TextView 
	                android:text="|"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_14_666666"
	               	android:layout_marginLeft="10dip"
	               	android:layout_marginRight="10dip"
	               	android:textColor="@color/login_text"
	                />
	             <TextView
	                 android:id="@+id/tx_try" 
	                android:text="试玩"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_18_back"
	               	android:textColor="@color/black"
	                />
	             <TextView 
	                android:text="|"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_14_666666"
	               	android:layout_marginLeft="10dip"
	               	android:layout_marginRight="10dip"
	               	android:textColor="@color/login_text"
	                />
	             <TextView
	                 android:id="@+id/tx_forget_pwd" 
	                android:text="忘记密码"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_18_back"
	               	android:textColor="@color/black"
	                />
	        </LinearLayout>
	    </LinearLayout>
		<ImageButton 
		    android:layout_gravity="right"
		    android:scaleType="center"
		    android:id="@+id/iv_cancel"
		    android:background="@drawable/ivbtn_selector"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"/>
	</FrameLayout>
</ScrollView>