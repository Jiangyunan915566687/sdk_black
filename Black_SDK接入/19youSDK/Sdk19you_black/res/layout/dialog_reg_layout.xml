<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="fill_parent">
	<FrameLayout
		    android:layout_width="fill_parent"
		    android:layout_height="match_parent"
		    android:clickable="true"
		    android:orientation="vertical"
		     >
	    <LinearLayout
	        android:layout_width="320dip"
	        android:layout_height="232dip"
	        android:layout_gravity="center"
	        android:background="@drawable/bg_login"
	        android:orientation="vertical" >
			<FrameLayout
			    android:layout_width="fill_parent"
			    android:layout_height="40.0dip"
			    android:clickable="true"
			    android:orientation="vertical"
			     >
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="40.0dip"
		            android:layout_gravity="bottom"
		            android:gravity="center"
		            android:paddingLeft="10dip"
		            android:paddingRight="10dip"
		            android:orientation="horizontal" >
		            <TextView
		            android:id="@+id/title"
		            style="@style/text_18_ffffff"
		            android:layout_width="wrap_content"
		            android:layout_height="40.0dip"
		            android:gravity="center"
		            android:textColor="@color/black"
		            android:text="账号注册"
		            android:visibility="visible" />
		        </LinearLayout>
		        
		        <ImageView 
					    android:layout_gravity="left|center_vertical"
					    android:scaleType="center"
					    android:id="@+id/back"
					    android:src="@drawable/title_back"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"/>
	        </FrameLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dip"
	            android:background="@drawable/divider_01"/>
	
	        <LinearLayout
	            android:id="@+id/content"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="12dip"
	            android:layout_marginRight="12dip"
	            android:layout_marginTop="10dip"
	            android:gravity="center" >
	
	            <EditText 
	                android:id="@+id/et_account" 
	                android:inputType="textEmailAddress"
	                style="@style/text_change_pwd_right"
	                android:layout_height="40dip"
	                android:layout_width="match_parent"
	                android:background="@drawable/et_top"
	                android:hint="@string/change_account_hint"/>
	            <View 
	                android:layout_width="match_parent"
		            android:layout_height="1dip"
		            android:background="@drawable/divider_01"/>
	            <EditText 
	                android:id="@+id/et_pwd" 
	                android:layout_height="40dip"
	                style="@style/text_change_pwd_right"
	                android:layout_width="match_parent"
	                android:background="@drawable/et_bottom"
	                android:hint="@string/login_pwd"/>
	        </LinearLayout>
	
		      <LinearLayout
		          android:layout_width="fill_parent"
		          android:layout_height="38.0dip"
		          android:layout_gravity="center"
		          android:layout_marginLeft="12dip"
	              android:layout_marginRight="12dip"
	              android:layout_marginTop="18.0dip"
		          android:orientation="horizontal" >
				        <Button 
				            android:id="@+id/oneKeyReg"
				            android:layout_width="0dip"
				            android:layout_height="38.0dip"
				            android:layout_weight="1"
				            android:textColor="@color/white"
				            android:text="一键注册"
				            android:textSize="14dip"
				            android:layout_marginLeft="12dip"
				            android:layout_marginRight="12dip"
				            android:background="@drawable/btn_ok_selector"/>
				        <Button 
				            android:id="@+id/reg"
				            android:layout_weight="1"
				            android:layout_width="0dip"
				            android:layout_height="38.0dip"
				            android:textColor="@color/white"
				            android:text="注册"
				            android:textSize="14dip"
				            android:layout_marginLeft="12dip"
				            android:layout_marginRight="12dip"
				            android:background="@drawable/btn_ok_selector"/>
	
	          </LinearLayout>
	        <LinearLayout
	          android:layout_width="fill_parent"
	          android:layout_height="38.0dip"
	          android:layout_marginLeft="12dip"
              android:layout_marginRight="12dip"
              android:layout_marginTop="10.0dip"
	          android:orientation="horizontal" >
	            <TextView 
	                android:text="一键注册为随机生成账号与密码,进入游戏后请修改密码"
	                android:id="@+id/tx_reg"
	                android:gravity="center"
	                android:layout_gravity="center"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	               	style="@style/text_14_666666"
	               	android:textColor="@color/login_text"
	                />
	        </LinearLayout>
	    </LinearLayout>
	</FrameLayout>
</ScrollView>