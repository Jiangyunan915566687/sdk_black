<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vivo_common_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vivowindowTitleHeight"
        android:background="@drawable/vivo_window_title_bar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/titleview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/vivo_personal_center_title"
            android:textColor="@color/vivo_windowTitleColor"
            android:textSize="@dimen/vivowindowTitleTextSize" />

        <LinearLayout
            android:id="@+id/titleRightBtn_layout"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <Button
                android:id="@+id/titleRightBtn"
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:background="@drawable/vivo_webview_tool_bar_closed_button" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/account_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vivo_person_center_black_bg"
                android:orientation="horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip" >

                <ImageView
                    android:id="@+id/vivo_head_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/user_head_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toRightOf="@id/vivo_head_img"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/vivo_account_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="ssssssssss"
                        android:textColor="#ffffff"
                        android:textSize="17dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/vivo_sub_account_text"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="sssssssssss"
                            android:textColor="#ffffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/account_exit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/vivo_sub_account_exit"
                            android:textColor="#00aeff"
                            android:textSize="17dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/sub_account_id_number_tip_sperater_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/vivo_listview_item_dotted_line"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/vcoin_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sub_account_id_number_tip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="7dp"
                        android:layout_marginLeft="7dp"
                        android:text="@string/vivo_account_personal_center_my_vcoin"
                        android:textColor="#babbbc"
                        android:textSize="@dimen/vivo_text_size_middle" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/vivo_gray_color" />

                <RelativeLayout
                    android:id="@+id/vivo_account_personal_center_vcoin__layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/vivo_func_item_bg"
                    android:gravity="center_vertical"
                    android:paddingRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/vivo_account_personal_center_vcoin_amount"
                        android:textColor="@color/vivo_text_color_middle"
                        android:textSize="@dimen/vivo_text_size_small" />

                    <TextView
                        android:id="@+id/vivo_account_personal_center_vcoin_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/vivo_account_personal_center_vcoin__tip"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:textColor="@color/vivo_text_color_small"
                        android:textSize="@dimen/vivo_text_size_small" />

                    <ImageView
                        android:id="@+id/vivo_account_personal_center_vcoin__tip"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/vivo_first_view_marginTop"
                        android:layout_toLeftOf="@+id/vivo_account_personal_center_vcoin_btn"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/vivo_account_personal_center_vcoin_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/vivo_register_other_button"
                        android:gravity="center"
                        android:text="充  值"
                        android:textColor="@color/vivo_title_color" />

                    <ImageView
                        android:id="@+id/vivo_account_personal_center_vcoin__arrow"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/vivo_list_item_arrow_selector"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/vivo_gray_color" />

                <RelativeLayout
                    android:id="@+id/vivo_account_personal_center_gift_layout"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="0dip"
                    android:background="@drawable/vivo_func_item_bg"
                    android:gravity="center_vertical"
                    android:paddingRight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/vivo_account_personal_center_gift_amount"
                        android:textColor="@color/vivo_text_color_middle"
                        android:textSize="@dimen/vivo_text_size_small" />

                    <TextView
                        android:id="@+id/vivo_account_personal_center_gift_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/vivo_account_personal_center_gift_arrow"
                        android:singleLine="true"
                        android:textColor="@color/vivo_text_color_small"
                        android:textSize="@dimen/vivo_text_size_small" />

                    <ImageView
                        android:id="@+id/vivo_account_personal_center_gift_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dip"
                        android:layout_toLeftOf="@+id/vivo_account_personal_center_gift_state"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/vivo_account_personal_center_gift_arrow"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/vivo_list_item_arrow_selector" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/vivo_func_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/vivo_gray_color" />

                    <RelativeLayout
                        android:id="@+id/account_safety_number_tip_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="7dp"
                            android:layout_marginLeft="7dp"
                            android:text="@string/vivo_account_personal_center_account_safety"
                            android:textColor="#babbbc"
                            android:textSize="@dimen/vivo_text_size_middle" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentTop="true"
                        android:background="@color/vivo_gray_color" />

                    <RelativeLayout
                        android:id="@+id/change_password_layout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:background="@drawable/vivo_func_item_bg"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:text="@string/vivo_change_password_label"
                            android:textColor="@color/vivo_text_color_middle"
                            android:textSize="@dimen/vivo_text_size_small" />

                        <TextView
                            android:id="@+id/password_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/change_password_arrow"
                            android:maxWidth="50dp"
                            android:singleLine="true"
                            android:textColor="@color/vivo_text_color_small"
                            android:textSize="@dimen/vivo_text_size_small"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/change_password_tip"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/vivo_first_view_marginTop"
                            android:layout_toLeftOf="@+id/password_state"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/change_password_arrow"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:src="@drawable/vivo_list_item_arrow_selector" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/vivo_gray_color" />

                    <RelativeLayout
                        android:id="@+id/phone_num_layout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="0dip"
                        android:background="@drawable/vivo_func_item_bg"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:text="@string/vivo_bind_phone_number_label"
                            android:textColor="@color/vivo_text_color_middle"
                            android:textSize="@dimen/vivo_text_size_small" />

                        <TextView
                            android:id="@+id/phone_num_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/phone_change_password_arrow"
                            android:singleLine="true"
                            android:textColor="@color/vivo_text_color_small"
                            android:textSize="@dimen/vivo_text_size_small"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dip"
                            android:layout_toLeftOf="@+id/phone_num_state"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/phone_change_password_arrow"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:src="@drawable/vivo_list_item_arrow_selector" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/vivo_gray_color" />

                    <RelativeLayout
                        android:id="@+id/security_question_layout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="0dip"
                        android:background="@drawable/vivo_func_item_bg"
                        android:gravity="center_vertical"
                        android:paddingRight="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            android:text="@string/vivo_security_question_label"
                            android:textColor="@color/vivo_text_color_middle"
                            android:textSize="@dimen/vivo_text_size_small" />

                        <TextView
                            android:id="@+id/security_question_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/security_change_password_arrow"
                            android:singleLine="true"
                            android:textColor="@color/vivo_text_color_small"
                            android:textSize="@dimen/vivo_text_size_small"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dip"
                            android:layout_toLeftOf="@+id/security_question_state"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/security_change_password_arrow"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dip"
                            android:src="@drawable/vivo_list_item_arrow_selector" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/vivo_gray_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/account_visitor_upgrade_tip_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/vivo_gray_color" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="20dip" >

                        <ImageView
                            android:id="@+id/vivo_img"
                            android:layout_width="10dip"
                            android:layout_height="10dip"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="4dip"
                            android:src="@drawable/account_safety_number_tip_image" />

                        <TextView
                            android:id="@+id/account_visitor_upgrade_tip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="5dip"
                            android:layout_toRightOf="@id/vivo_img"
                            android:text="@string/vivo_account_upgrade_tip"
                            android:textColor="#90969a"
                            android:textSize="@dimen/vivo_text_size_small" />
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/next_step"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vivo_green_btn_hight"
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="@dimen/vivo_green_btn_marginLeft"
                    android:layout_marginRight="@dimen/vivo_green_btn_marginRight"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/vivo_login_btn"
                    android:text="@string/vivo_account_upgrade_btn_text"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/vivo_text_size_middle"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>