<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/dialog_background_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/pay_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bbk_dialog_title_height"
        android:background="@drawable/bbk_dialog_title_bar"
        android:gravity="center"
        android:text="@string/bbk_tips"
        android:textAppearance="?android:attr/textAppearanceMediumInverse"
        android:textColor="@color/TextColorBlack"
        android:textSize="21sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pay_fail_msg"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="20dip"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/bbkDailogItemTextSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pf_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:background="@drawable/bbk_submit_dialog_button"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/bbk_submit"
                android:textColor="@color/bbk_TextColorWhite"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>