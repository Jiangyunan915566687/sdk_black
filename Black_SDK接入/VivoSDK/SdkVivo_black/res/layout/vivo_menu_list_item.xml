<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/account_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="57dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="0dip"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="11111111111"
                android:textColor="@color/vivo_text_color_middle"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/last_logon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="1小时前"
                android:textColor="#90969a"
                android:textSize="11.5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageView
                android:id="@+id/del_his_account_btn"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:background="@drawable/vivo_clean_btn"
                android:scaleType="centerInside" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/his_user_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="@color/vivo_edit_view_line" />

</LinearLayout>