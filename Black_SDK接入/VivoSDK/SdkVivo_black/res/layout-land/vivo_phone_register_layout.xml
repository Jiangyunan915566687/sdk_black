<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vivo_login_total_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="320dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:background="@drawable/vivo_account_change_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/account_title_layout"
            android:layout_width="match_parent"
            android:layout_height="46dip"
            android:orientation="horizontal" >

            <View
                android:id="@+id/vivo_line"
                android:layout_width="2px"
                android:layout_height="23dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="13dip"
                android:layout_marginRight="10dip"
                android:background="@color/vivo_title_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/vivo_line"
                android:background="@drawable/vivo_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/vivo_line"
                android:text="手机号注册"
                android:textColor="@color/vivo_title_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/edit_layout_bg"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="24dip"
                android:layout_marginRight="12dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/vivo_account_num_register_label"
                android:textColor="@color/vivo_title_color"
                android:textSize="@dimen/vivo_text_size_middle" />

            <com.vivo.account.base.Utils.EditTextErrorFixed
                android:id="@+id/account_name_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/vivo_account_register_phone_label_tip"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:textColor="@color/vivo_text_color_middle"
                android:textSize="@dimen/vivo_text_size_middle" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/read_protocol_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/vivo_read_protocol"
                android:textColor="@drawable/vivo_read_protocol_color"
                android:textSize="@dimen/vivo_text_size_small" />

            <TextView
                android:id="@+id/account_registe_email_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/vivo_switch_email_register"
                android:textColor="@color/vivo_title_color"
                android:textSize="@dimen/vivo_text_size_small" />
        </RelativeLayout>

        <Button
            android:id="@+id/turn_to_regist2_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/vivo_green_btn_hight"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="18dip"
            android:background="@drawable/vivo_login_btn"
            android:singleLine="true"
            android:text="下一步"
            android:textColor="@android:color/white"
            android:textSize="@dimen/vivo_text_size_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="13dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="18dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/temp_account_login"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left"
                android:singleLine="true"
                android:text="@string/vivo_use_temp_account"
                android:textColor="#ffffff"
                android:textSize="@dimen/vivo_text_size_middle" />

            <TextView
                android:id="@+id/account_old_login_layout"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/vivo_old_account_login"
                android:textColor="#ffffff"
                android:textSize="@dimen/vivo_text_size_middle" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>