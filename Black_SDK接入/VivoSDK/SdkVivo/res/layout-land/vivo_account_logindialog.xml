<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/vivo_account_change_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/vivo_account_change_fiirst_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vivo_account_change_icon"
                android:layout_width="37dp"
                android:layout_height="11dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:src="@drawable/vivo_account_change_icon" />

            <RelativeLayout
                android:id="@+id/vivo_account_change_layout"
                android:layout_width="100dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/vivo_account_change_button"
                    android:layout_width="11dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/vivo_account_change_text"
                    android:gravity="center_vertical"
                    android:src="@drawable/vivo_account_change_button_drawable" />

                <TextView
                    android:id="@+id/vivo_account_change_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="@dimen/vivo_account_change_margin_left"
                    android:gravity="center_vertical"
                    android:layerType="software"
                    android:singleLine="true"
                    android:text="@string/vivo_account_change_text"
                    android:textColor="@drawable/vivo_account_change_text_color_selector"
                    android:textSize="11.5dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vivo_account_change_second_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vivo_account_change_fiirst_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/vivo_account_dialog_avatar"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left"
                android:src="@drawable/vivo_account_dialog_avatar" />

            <TextView
                android:id="@+id/vivo_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/vivo_account_change_margin_left"
                android:layout_toRightOf="@+id/vivo_account_dialog_avatar"
                android:ellipsize="end"
                android:gravity="bottom"
                android:layerType="software"
                android:singleLine="true"
                android:text="@string/vivo_account_change_accountlable"
                android:textColor="@color/vivo_account_lable_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vivo_sub_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/vivo_account_text"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="@dimen/vivo_account_change_margin_left"
                android:layout_marginTop="9dp"
                android:layout_toRightOf="@+id/vivo_account_dialog_avatar"
                android:gravity="top"
                android:layerType="software"
                android:singleLine="true"
                android:text="@string/vivo_account_change_account_sub_lable"
                android:textColor="@color/vivo_account_lable_text_color"
                android:textSize="11.25sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/vivo_account_change_saparator"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/vivo_account_change_second_view"
            android:layout_marginTop="30dip"
            android:background="@color/vivo_title_color" />

        <TextView
            android:id="@+id/vivo_account_change_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/vivo_account_change_saparator"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/vivo_sub_account_entry_text_totalsec"
            android:textColor="@color/vivo_text_color_register_color"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>